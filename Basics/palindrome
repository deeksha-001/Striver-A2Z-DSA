class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0) return false;

        int rev = 0;
        int dup = x;

        while (x != 0) {
            int lno = x % 10;        
            x = x / 10;              
            rev = (rev * 10) + lno;  
        }
        return dup == rev; 
    }
}
